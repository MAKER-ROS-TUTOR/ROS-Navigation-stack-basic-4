<?xml version="1.0" ?>
<robot name="my_robot_car" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find maker_robot)/urdf/materials.xacro" />

<link name="base_link">
        <!--<visual>
          <geometry>
             <box size="0.24 0.24 0.001"/>
          </geometry>
          <material name="white"/>
          <origin rpy="0 0 0" xyz="0 0 0.0005"/>
          <material>
            <color rgba="0 0 0.8 1" />
          </material>
        </visual> -->
        <collision>
          <origin rpy="0 0 0" xyz="0 0 0.0005"/>
          <geometry>
            <box size="0.22 0.22 0.001"/>
          </geometry>
        </collision>
    </link>

  <joint name="base_link_joint" type="fixed">
        <origin xyz="0 0 0.026" rpy="0 0 -1.5708" />
        <parent link="base_link" />
        <child link="base_plate" />
    </joint>



<link name="base_plate">
  
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/base_plate.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="yellow"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/base_plate.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>



<link name="right_rear_wheel">
  
  <visual>
    <origin rpy="0 0 0" xyz="-0.21 -0.21 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/right_rear_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="-0.21 -0.21 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/right_rear_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<link name="right_front_wheel">
 
  <visual>
    <origin rpy="0 0 0" xyz="-0.21 0.2 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/right_front_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="-0.21 0.2 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/right_front_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<link name="left_front_wheel">
 
  <visual>
    <origin rpy="0 0 0" xyz="0.22 0.2 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/left_front_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0.22 0.2 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/left_front_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<link name="left_rear_wheel">
  
  <visual>
    <origin rpy="0 0 0" xyz="0.22 -0.21 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/left_rear_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0.22 -0.21 -0.1"/>
    <geometry>
      <mesh filename="package://maker_robot/meshes/left_rear_wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<joint name="right_rear_wheel_joint" type="continuous">
  <origin rpy="0 0 0" xyz="0.21 0.21 0.1"/>
  <parent link="base_plate"/>
  <child link="right_rear_wheel"/>
  <axis xyz="-1.0 0.0 0.0"/>
</joint>

<joint name="right_front_wheel_joint" type="continuous">
  <origin rpy="0 0 0" xyz="0.21 -0.2 0.1"/>
  <parent link="base_plate"/>
  <child link="right_front_wheel"/>
  <axis xyz="-1.0 0.0 0.0"/>
</joint>

<joint name="left_front_wheel_joint" type="continuous">
  <origin rpy="0 0 0" xyz="-0.22 -0.2 0.1"/>
  <parent link="base_plate"/>
  <child link="left_front_wheel"/>
  <axis xyz="-1.0 0.0 0.0"/>
</joint>

<joint name="left_rear_wheel_joint" type="continuous">
  <origin rpy="0 0 0" xyz="-0.22 0.21 0.1"/>
  <parent link="base_plate"/>
  <child link="left_rear_wheel"/>
  <axis xyz="-1.0 0.0 0.0"/>
</joint>
<joint name="laser_joint" type="fixed">
        <origin xyz="0 0.040 0.190" rpy="0 0 1.5708" />
        <parent link="base_plate" />
        <child link="laser" />
    </joint>

    <link name="laser">
    <visual>
      <origin rpy="0 0 -1.5708" xyz="0.084 -0.242 -0.098"/>
      <geometry>
        <mesh filename="package://maker_robot/stl/RpLidar.stl" scale="0.001 0.001 0.001"/> 
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.242 0.084 -0.098"  />
      <geometry>
        <mesh filename="package://maker_robot/stl/RpLidar.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
    </link>  
</robot>
